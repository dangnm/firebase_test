%header.navbar.navbar-default.navbar-static-top
  .container
    .navbar-header
      = link_to "Test", root_path, id: "logo", class: 'navbar-brand'
      .small-screen-controls
        %button.navbar-toggle.collapsed{"data-toggle" => "collapse", "data-target" => "#navbar", "aria-expanded" => "false"}
          %span.sr-only="Toggle navigation"
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
    #navbar.navbar-collapse.collapse{"aria-expanded" => "false"}
      %ul.nav.navbar-nav
        %li= link_to "Home", root_path
        - if signed_in?
          %li 
            %li= link_to "Users", users_admin_index_path
            %li= link_to "Products", products_admin_index_path
          %li
            = link_to "Sign out", destroy_user_session_path, :method => :delete
        - else
          %li= link_to "Sign in", new_user_session_path
          %li= link_to "Sign up", new_user_registration_path